{
  "manifest_version": 3,
  "name": "Lichess Refined",
  "version": "1.0",
  "description": "Modifies the lichess homepage to add user info and remove clutter.",
  "icons": {
    "48": "lire.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Focused Lichess"
  },
  "content_scripts": [
    {
      "matches": ["*://*.lichess.org/"],
      "css": ["lire.css"],
      "js": ["lire.js", "loggedin.js"]
    }
  ],
  "permissions" : ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "lire@rsazra.com"
    }
  }
}
